<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     ThemeContrast="ThemeContrast.Dark"
     NavigationBreakpoint="Breakpoint.Tablet">
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="IconName.Dashboard" />
                MTG Viewer
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarToggler />
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon IconName="IconName.Home" IconStyle="IconStyle.DuoTone" />
                    Home
                </BarLink>
            </BarItem>

            <BarItem>
                <BarLink To="my-collection">
                    <BarIcon IconName="@("fa-rectangle-history-circle-user")" IconStyle="IconStyle.Regular" />
                    Your Collection
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="cards">
                    <BarIcon IconName="@("fa-cards-blank")" IconStyle="IconStyle.DuoTone" />
                    Cards
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="symbols">
                    <BarIcon IconName="IconName.Shapes" IconStyle="IconStyle.DuoTone" />
                    Symbols
                </BarLink>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.UserCheck" IconStyle="IconStyle.DuoTone" />
                        App Information
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                    <BarDropdownItem>
                        <BarIcon IconName="IconName.Code" IconStyle="IconStyle.DuoTone" />
                        Version:
                    </BarDropdownItem>
                    <BarDropdownItem>
                        <BarIcon IconName="IconName.Copyright" IconStyle="IconStyle.Light" />
                        The Omen Den
                    </BarDropdownItem>
                    <BarDropdownItem>
                        <BarIcon IconName="IconName.Paperclip" />
                        License: MIT
                    </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="@("fa-gears")" IconStyle="IconStyle.DuoTone" />
                        Settings
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>
                            <BarIcon IconName="IconName.Language" IconStyle="IconStyle.Solid" />
                            Language
                        </BarDropdownItem>
                        <BarDropdownItem>
                            <BarIcon IconName="IconName.PaintBrush" />
                            Theme
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarLink To="contactUs">
                    <BarIcon IconName="IconName.Mail" IconStyle="IconStyle.Regular" />
                    Contact Us
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>