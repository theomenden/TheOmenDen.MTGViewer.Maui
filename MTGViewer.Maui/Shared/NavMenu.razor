     ThemeContrast="ThemeContrast.Dark"
     Background="Background.Dark"
     NavigationBreakpoint="Breakpoint.Tablet">
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="IconName.Dashboard"/>
                MTG Viewer
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarToggler />
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon IconName="IconName.Home" IconStyle="IconStyle.DuoTone" />
